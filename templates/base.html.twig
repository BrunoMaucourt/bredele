<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bredele{% endblock %} - Site e-commerce Bredele</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="{{ asset('assets/pictures/website/LogoHeader.svg') }}" type="image/x-icon">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        {% endblock %}
        {% block javascript %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous" defer></script>
        {% endblock %}
    </head>
    <body class="row">   
        <header class="col12">
            {% block header %}

            {% endblock header %}
        </header>
        <main>
            {% block main %}
                <div id="sidebar">
                    {% block sidebar %}
                        <ul>
                            <li><a href="{{ path('accueil') }}">Home</a></li>
                            <li><a href="{{ path('app_lucky_number') }}">Lucky</a></li>
                        </ul>
                    {% endblock %}
                </div>

                <div id="content">
                    {% block content %}{% endblock %}
                </div>
            {% endblock main %}
        </main>
        <footer class="bg-dark text-white d-flex flex-column justify-content-center">
            {% block footer %}
            {% endblock footer %}
        </footer>
    </body>
</html>