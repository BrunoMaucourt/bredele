{% extends 'layout.html.twig' %}
{% block title %}Connectez-vous{% endblock %}

{% block main %}
    <div class="container row">
        <div class="col-6">
            <h2>Se connecter</h2>
            <form action="../Controller/ConnectionController.php" method="POST">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Votre adresse email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <!--<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>-->
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Votre mot de passe</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </form>
        </div>
        <div class="col-6">
            <h2>S'inscrire</h2>
            <form action="POST">
                <div class="mb-3">
                    <label for="exampleInputEmail2" class="form-label">Votre adresse email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <!--<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>-->
                </div>
                <button type="submit" class="btn btn-primary">S'inscrire'</button>
            </form>        
        </div>
    </div>
{% endblock main %}