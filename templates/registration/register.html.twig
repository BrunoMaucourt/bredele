{% extends 'layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
<section class="container my-5">
    <div class="row">
        <div class="col">
                <h2>Inscription</h2>
            {{ form_start(registrationForm) }}
                <fieldset>
                    <legend>Mon identité</legend>
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.firstname) }}
                </fieldset>

                <fieldset>
                    <legend>Mes informations de connexions</legend>
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                        }) }}
                </fieldset>
  
                <fieldset>
                    <legend>Mes coordonnées</legend>
                    {{ form_row(registrationForm.address) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.city) }}
                </fieldset>

                {{ form_row(registrationForm.RGPDConsent) }}

                <button type="submit" class="btn btn-primary mt-3">S'inscrire</button>
                <a class="btn btn-light" href="{{ path('app_login') }}">Me connecter</a>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>

{% endblock %}
